<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RoadMap.RoadmapBaseFragment">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30sp"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="RoadMap"
        android:textStyle="bold"
        android:textColor="#3E3E3E"
        android:textSize="16sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40sp"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/basic"
                android:scaleType="fitXY"
                android:layout_marginTop="5sp"
                android:layout_marginHorizontal="5sp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/basic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/basic">

                <TextView
                    android:id="@+id/cs50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingStart="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="● CS50's Introduction to Computer Science"
                    android:textColor="#0000FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="20sp"
                    />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cs50"
                    android:paddingStart="65sp"
                    android:layout_marginTop="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="What you'll learn"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txt1"
                    android:paddingStart="65sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="start"
                    android:paddingEnd="30sp"
                    android:text="● A broad and robust understanding of computer science and programming\n● How to think algorithmically and solve programming problems efficiently\n● Concepts like abstraction, algorithms, data structures, encapsulation, resource management, security, software engineering, and web development\n● Familiarity in a number of languages, including C, Python, SQL, and JavaScript plus CSS and HTML\n● How to engage with a vibrant community of like-minded learners from all levels of experience\n● How to develop and present a final programming project to your peers"
                    android:textStyle="bold"
                    android:textSize="8sp"
                    />

                <TextView
                    android:id="@+id/python"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txt2"
                    android:paddingStart="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="● Python for Everybody (PY4E)"
                    android:textColor="#0000FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20sp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/core"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@id/basic1"
                android:src="@drawable/core"
                android:layout_marginTop="5sp"
                android:layout_marginHorizontal="5sp"
                />
            <ImageView
                android:id="@+id/advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/core"
                android:src="@drawable/advanced"
                android:layout_marginTop="5sp"
                android:layout_marginHorizontal="5sp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>