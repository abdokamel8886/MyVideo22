<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@id/card1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true"
                    app:civ_border_color="@color/color1"
                    app:civ_border_width="2dp" />

            </RelativeLayout>








            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card1"
                android:layout_marginTop="20sp"
                android:text="Abdel Rahman kamel"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/username"
                android:layout_marginTop="5sp"
                android:text="abdokamel8886@gmail.com"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/acc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mail"
                android:layout_marginTop="40sp"
                android:layout_marginStart="20sp"
                android:text="Account Settings"
                android:textSize="14sp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/acc_txt"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="30sp"
                android:orientation="horizontal"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profile_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="My Profile"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:outlineSpotShadowColor="@color/background4"
                    android:outlineAmbientShadowColor="@color/background4"
                    android:backgroundTint="@color/background4"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_profile_btn"

                android:layout_marginHorizontal="30sp"
                android:orientation="horizontal"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/security_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Security Settings"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:outlineSpotShadowColor="@color/background4"
                    android:outlineAmbientShadowColor="@color/background4"
                    android:backgroundTint="@color/background4"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    app:layout_constraintBottom_toBottomOf="parent"/>




            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/university"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/security"
                android:layout_marginHorizontal="30sp"
                android:orientation="horizontal"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/university_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Faculty Information"
                    android:outlineSpotShadowColor="@color/background4"
                    android:outlineAmbientShadowColor="@color/background4"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:backgroundTint="@color/background4"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    app:layout_constraintBottom_toBottomOf="parent"/>




            </androidx.constraintlayout.widget.ConstraintLayout>






            <TextView
                android:id="@+id/help_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/university"
                android:layout_marginTop="20sp"
                android:layout_marginStart="20sp"
                android:text="Help and Support"
                android:textSize="14sp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/about_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/help_txt"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="30sp"
                android:orientation="horizontal"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/aboutusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About Us"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:outlineSpotShadowColor="@color/background4"
                    android:outlineAmbientShadowColor="@color/background4"
                    android:backgroundTint="@color/background4"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/terms_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_btn"
                android:layout_marginHorizontal="30sp"
                android:orientation="horizontal"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Terms of Use"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:outlineSpotShadowColor="@color/background4"
                    android:outlineAmbientShadowColor="@color/background4"
                    android:backgroundTint="@color/background4"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>












            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/terms_btn"
                android:backgroundTint="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>