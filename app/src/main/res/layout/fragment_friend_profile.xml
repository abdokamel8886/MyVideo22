<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.MyFriends.FriendProfileFragment">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10sp"
        android:layout_marginTop="30sp"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/back"
        android:layout_marginStart="5sp"
        app:layout_constraintBottom_toBottomOf="@id/back"
        android:text="name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/chat01"
        android:id="@+id/chat"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/back"
        android:layout_marginEnd="30sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="10sp"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:background="@color/black"
        android:id="@+id/ed1"
        />

    <RelativeLayout
        android:id="@id/card1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed1"
        android:layout_marginTop="100sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:src="@drawable/courses"
            app:civ_border_color="#E9F0FE"
            app:civ_border_width="5dp" />

    </RelativeLayout>





    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1"
        android:layout_marginTop="10sp"
        android:text="UserName"
        android:textSize="16sp"
        android:textColor="#646568"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_marginTop="5sp"
        android:textColor="#646464"
        android:textStyle="bold"
        android:text="username@gmail.com"
        android:textSize="10sp"

        />


    <ImageView
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:layout_constraintStart_toStartOf="@id/mail"
        app:layout_constraintTop_toBottomOf="@id/mail"
        android:src="@drawable/ic_baseline_date_range_24"
        android:layout_marginTop="20sp"
        android:id="@+id/date"
        />
    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/date"
        app:layout_constraintBottom_toBottomOf="@id/date"
        app:layout_constraintTop_toTopOf="@id/date"
        android:layout_marginStart="10sp"
        android:textColor="#646464"
        android:textStyle="bold"
        android:text="1-5-2000"
        android:textSize="12sp"

        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:src="@drawable/git"
        android:layout_marginTop="20sp"
        android:id="@+id/git"
        />
    <TextView
        android:id="@+id/git_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/git"
        app:layout_constraintBottom_toBottomOf="@id/git"
        app:layout_constraintTop_toTopOf="@id/git"
        android:layout_marginStart="10sp"
        android:textColor="#646464"
        android:textStyle="bold"
        android:text="username"
        android:textSize="12sp"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/git"
        app:layout_constraintTop_toBottomOf="@id/git"
        android:src="@drawable/call"
        android:layout_marginTop="20sp"
        android:id="@+id/phone"
        />
    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        app:layout_constraintTop_toTopOf="@id/phone"
        android:layout_marginStart="10sp"
        android:textColor="#646464"
        android:textStyle="bold"
        android:text="01000055050"
        android:textSize="12sp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>