<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <ImageView
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginStart="-10sp"
        android:layout_marginTop="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img"
        android:src="@drawable/logo"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintBottom_toBottomOf="@id/img"
        android:layout_marginTop="10dp"
        android:layout_marginStart="-35dp"
        android:src="@drawable/ni"
        />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintBottom_toBottomOf="@id/img"
        android:layout_marginEnd="40sp"
        android:src="@drawable/tracking111"
        android:id="@+id/road"
        />


    <TextView
        android:id="@+id/user2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/road"
        app:layout_constraintTop_toBottomOf="@id/road"
        app:layout_constraintEnd_toEndOf="@id/road"
        android:text="Roadmaps"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#666666"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="30sp"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >



        <com.google.android.material.button.MaterialButton
            android:id="@+id/Courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Courses"
            android:backgroundTint="@color/colornew2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:cornerRadius="50sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/Courses"
            android:layout_marginStart="15sp"
            android:text="  Books  "
            android:backgroundTint="@color/colornew2"
            android:textStyle="bold"
            android:textColor="#3E3E3E"
            android:textSize="12sp"
            app:cornerRadius="50sp"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="1sp"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        android:background="#555555"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="15sp"
        android:id="@+id/ed"/>




    <FrameLayout
        android:id="@+id/myhome_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        />








</androidx.constraintlayout.widget.ConstraintLayout>