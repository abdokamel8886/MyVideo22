<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:layout_marginEnd="20sp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/background2"
        app:strokeWidth="1sp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/courses"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>






        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card"
        android:gravity="left"
        android:paddingEnd="20sp"
        android:layout_marginVertical="5sp"
        app:layout_constraintTop_toTopOf="@id/card"
        android:text="ين بنبسيك مكبسي  fdkd lsd;f;lmfsfs; sfls dfspmfsfmsdmksd"
        android:elevation="2dp"
        android:layout_marginStart="20sp"
        android:textSize="14sp"
        android:textColor="#333"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/author_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name_txt"
        android:layout_marginVertical="5sp"
        app:layout_constraintTop_toBottomOf="@id/name_txt"
        android:text="author"
        android:elevation="2dp"
        android:textSize="12sp"
        android:textColor="#555555"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="1sp"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:background="#ccc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>